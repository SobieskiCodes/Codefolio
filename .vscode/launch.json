{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Launch Frontend via NPM",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Python: FastAPI (Linux)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "args": [
                "backend.main:app",
                "--host", "localhost",
                "--port", "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/backend/venv/bin/python",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: FastAPI (Windows)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/main.py",
            "args": [
                "backend.main:app",
                "--host", "localhost",
                "--port", "8000",
                "--reload"
            ],
            "console": "integratedTerminal",
            "python": "${workspaceFolder}/backend/venv/Scripts/python.exe",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }        
    ]
}